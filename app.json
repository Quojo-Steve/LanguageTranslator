{
  "expo": {
    "name": "LanguageTranslator",
    "slug": "LanguageTranslator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow the app to access the microphone for speech recognition",
        "NSSpeechRecognitionUsageDescription": "Allow the app to securely recognize user speech"
      },
      "bundleIdentifier": "oid"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ashafa_ahmed.LanguageTranslator"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "./withVoicePlugin"
    ],
    "extra": {
      "eas": {
        "projectId": "3877cb7b-b5a4-4124-8b0d-d45c561cba50"
      }
    }
  }
}
